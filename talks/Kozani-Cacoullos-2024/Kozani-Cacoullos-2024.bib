@article{CandelleroGilchMueller-2012,
abstract = {We study certain phase transitions of branching random walks (BRW) on Cayley graphs of free products. The aim of this paper is to compare the size and structural properties of the trace, i.e., the subgraph that consists of all edges and vertices that were visited by some particle, with those of the original Cayley graph. We investigate the phase when the growth parameter {\$}\backslashlambda{\$} is small enough such that the process survives but the trace is not the original graph. A first result is that the box-counting dimension of the boundary of the trace exists, is almost surely constant and equals the Hausdorff dimension which we denote by {\$}\backslashPhi(\backslashlambda){\$}. The main result states that the function {\$}\backslashPhi(\backslashlambda){\$} has only one point of discontinuity which is at {\$}\backslashlambda{\_}{\{}c{\}}=R{\$} where {\$}R{\$} is the radius of convergence of the Green function of the underlying random walk. Furthermore, {\$}\backslashPhi(R){\$} is bounded by one half the Hausdorff dimension of the boundary of the original Cayley graph and the behaviour of {\$}\backslashPhi(R)-\backslashPhi(\backslashlambda){\$} as {\$}\backslashlambda \backslashuparrow R{\$} is classified. In the case of free products of infinite groups the end-boundary can be decomposed into words of finite and words of infinite length. We prove the existence of a phase transition such that if {\$}\backslashlambda\backslashleq \backslashtilde\backslashlambda{\_}{\{}c{\}}{\$} the end boundary of the trace consists only of infinite words and if {\$}\backslashlambda{\textgreater}\backslashtilde\backslashlambda{\_}{\{}c{\}}{\$} it also contains finite words. In the last case, the Hausdorff dimension of the set of ends (of the trace and the original graph) induced by finite words is strictly smaller than the one of the ends induced by infinite words.},
annote = {A natural successor to the above work would be to study the behaviour of branching random walks on free products, and this is what is accomplished in Candellero's second paper. It is another substantial piece of work, published in the strong LMS family of journals. For branching random walk, a natural object of study is the so-called $\backslash$emph{\{}trace{\}}, simply described as the collection of sites visited by the branching random walk. It is intuitive that if branching occurs at a high enough rate then all sites will be visited. So suppose the rate is not high enough for this -- a phase transition then occurs. In this paper, estimates are given for the volume growth of the trace and for the box-counting cimension of the boundary. Proof techniques involve careful asymptotic analysis as before, but also branching process theory and some clever probabilistic constructions.},
archivePrefix = {arXiv},
arxivId = {arXiv:1104.4576v2},
author = {Candellero, Elisabetta and Gilch, Lorenz A and M{\"{u}}ller, Sebastian},
